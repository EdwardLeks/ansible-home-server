services:
  tailscale:
    image: tailscale/tailscale:latest
    container_name: tailscale
    network_mode: host
    restart: always
    environment:
      TS_AUTHKEY: "{{ tailscale_auth_key }}"
      TS_STATE_DIR: "/var/lib/tailscale"
      TS_USERSPACE: "false"
    volumes:
      - /var/lib/tailscale:/var/lib/tailscale
    cap_add:
      - NET_ADMIN
    devices:
      - /dev/net/tun:/dev/net/tun